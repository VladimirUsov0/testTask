create table bank
(
    id     UUID primary key,
    credit uuid foreign key references credit,
    client uuid foreign key references client
);

create table client
(
    id             uuid primary key,
    fio            varchar(256),
    email          varchar(256),
    passportNumber varchar(64)
);

create table credit
(
    id      uuid primary key,
    limit   bigint,
    percent double precision
);

create table loanOffer(
    id uuid primary key,
    client_id uuid foreign key references client,
    credit_id uuid foreign key references credit,
    creditSum bigint,
    paymentDate date
);
